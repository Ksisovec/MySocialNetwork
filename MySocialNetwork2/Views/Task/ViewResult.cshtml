            @Html.DisplayFor(modelItem => item.NameOfTask)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RatingOfTask)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Likes)
        </td>
